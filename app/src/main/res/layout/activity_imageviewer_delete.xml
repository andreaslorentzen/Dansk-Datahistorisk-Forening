<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imageview_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000">

        <Button
            android:drawableLeft="@drawable/ic_done_green_500_36dp"
            android:drawableStart="@drawable/ic_done_green_500_36dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/doneButtonLabel"
            android:id="@+id/imageview_back_button"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp" />

        <Button
            android:drawableLeft="@drawable/ic_delete_red_a700_36dp"
            android:drawableStart="@drawable/ic_delete_red_a700_36dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/deleteButtonLabel"
            android:id="@+id/imageview_delete_button"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>